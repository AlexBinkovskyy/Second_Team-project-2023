{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "slim-select": ["src/slim-select"],
      "@slim-select/vue": ["src/vue"]
    }
  },
  "include": ["dist/", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/react/src/index.tsx"]
}
